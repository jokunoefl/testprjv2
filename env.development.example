# 開発環境設定
ENVIRONMENT=development

# データベース設定
DATABASE_URL=sqlite:///./dev_pdfs.db

# ファイルアップロード設定
UPLOAD_DIR=dev_uploaded_pdfs

# CORS設定
FRONTEND_URL=http://localhost:3000

# API設定（開発環境では空でもOK）
ANTHROPIC_API_KEY=

# セキュリティ設定
SECRET_KEY=dev-secret-key-for-development-only

# ログ設定
LOG_LEVEL=DEBUG

# デバッグ設定
DEBUG=true

# ファイルサイズ制限（MB）
MAX_FILE_SIZE=50
